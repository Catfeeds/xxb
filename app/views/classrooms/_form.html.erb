<% if current_user.has_role? :admin %>
<%= form_for @classroom, :html => { :class => "form-horizontal classroom" } do |f| %>

    <% if @classroom.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@classroom.errors.count, "error") %> prohibited this classroom from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @classroom.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@classroom[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%= error_span(@classroom[:user_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :end, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :end, :class => 'form-control' %>
    </div>
    <%= error_span(@classroom[:end]) %>
  </div>
  <div class="control-group">
    <%= f.label :deleted_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :deleted_at, :class => 'form-control' %>
    </div>
    <%= error_span(@classroom[:deleted_at]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            classrooms_path, :class => 'btn btn-default' %>

<% end %>

<% else %>

<%= form_for @classroom, :html => { :class => "form-horizontal classroom" } do |f| %>

    <% if @classroom.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@classroom.errors.count, "error") %> 让这个教室无法保存：</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @classroom.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label '班级名称', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@classroom[:name]) %>
  </div>
  <div class="control-group">
    <%= f.check_box :end %>
    <%= f.label '是否关闭', :class => 'control-label' %>
    <%= error_span(@classroom[:end]) %>
  </div>

  <hr>

  <%= f.submit '保存班级', :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            classrooms_path, :class => 'btn btn-default' %>

<% end %>

<% end %>
