<% if current_user.has_role? :admin %>

<%= form_for @paper, html: { class: "form-horizontal paper" } do |f| %>

    <% if @paper.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@paper.errors.count, "error") %> 使得这个 paper 无法保存：</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @paper.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :user_id, class: 'form-control' %>
    </div>
    <%= f.error_span(:user_id) %>
  </div>
  <div class="form-group">
    <%= f.label :title, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <%= f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :duration, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :duration, class: 'form-control' %>
    </div>
    <%= f.error_span(:duration) %>
  </div>
  <div class="form-group">
    <%= f.label :deleted_at, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :deleted_at, class: 'form-control' %>
    </div>
    <%= f.error_span(:deleted_at) %>
  </div>


  <%= f.submit nil, class: 'btn btn-primary col-sm-offset-2' %>
  <%= link_to t('.cancel', default: t("helpers.links.cancel")),
            papers_path, class: 'btn btn-default' %>

<% end %>

<% else %>

<%= form_for @paper, html: { class: "form-horizontal paper" } do |f| %>

    <% if @paper.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@paper.errors.count, "error") %> 使得这个 paper 无法保存：</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @paper.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <%= f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :duration, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :duration, class: 'form-control' %>
    </div>
    <%= f.error_span(:duration) %>
  </div>


  <%= f.submit nil, class: 'btn btn-primary col-sm-offset-2' %>
  <%= link_to t('.cancel', default: t("helpers.links.cancel")),
            papers_path, class: 'btn btn-default' %>

<% end %>

<% end %>
