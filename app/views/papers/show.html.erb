<% if current_user.id == @paper.user_id %>
<%= link_to "编辑试卷", paperitems_url, class: 'btn btn-success' %>
<% else %>
<%= link_to "开始测试", paperitems_url, class: 'btn btn-success' %>
<% end %>

<% if @papertests.any? %>

<button class="btn btn-default pull-right" type="button" data-toggle="collapse" data-target="#collapsepapertests" aria-expanded="false" aria-controls="collapseAddToCardbox">
  查看答卷记录
</button>
<div class="collapse" id="collapsepapertests">
<table class="table table-striped">
  <thead>
    <tr>
      <th>标识号</th>
      <th>开始时间</th>
      <th>得分</th>
      <th>答卷情况</th>
    </tr>
  </thead>
  <tbody>
    <% @papertests.each do |papertest| %>
      <tr>
        <td><%= link_to papertest.id, papertest_path(papertest) %></td>
        <td><%= papertest.created_at.strftime("%F %T") %></td>
        <% if papertest.evaluations.count == 0 %>
          <td><%= number_with_precision(0, precision: 2) %></td>
        <% elsif papertest.evaluations.map{|e| e.score ? 1 : 0}.inject(:+) == papertest.evaluations.count %>
          <td><%= number_with_precision(papertest.evaluations.map{|e| e.score }.inject(:+), precision: 2) %></td>
        <% else %>
          <td>试卷还没改好</td>
        <% end %>
          <td><%= link_to "查看答卷情况", paper_overview_url(papertest_id: papertest.id), class: "btn btn-xs btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<% end %>

