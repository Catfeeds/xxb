<%= form_for @phonetic, html: { class: "form-horizontal phonetic" } do |f| %>

    <% if @phonetic.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@phonetic.errors.count, "error") %> 使得这个 phonetic 无法保存：</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @phonetic.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :content, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :content, class: 'form-control' %>
    </div>
    <%= error_span(@phonetic[:content]) %>
  </div>
  <div class="form-group">
    <%= f.label :label, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :label, class: 'form-control' %>
    </div>
    <%= error_span(@phonetic[:label]) %>
  </div>
  <div class="form-group">
    <%= f.label :deleted_at, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :deleted_at, class: 'form-control' %>
    </div>
    <%= error_span(@phonetic[:deleted_at]) %>
  </div>


  <%= f.submit nil, class: 'btn btn-primary col-sm-offset-2' %>
  <%= link_to t('.cancel', default: t("helpers.links.cancel")),
            phonetics_path, class: 'btn btn-default' %>

<% end %>
