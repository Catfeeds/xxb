<% if session[:discussion_id] %>
<% @discussion = Discussion.find(session[:discussion_id]) %>
<%= link_to "返回课堂", discussion_path(@discussion), class: "btn btn-default pull-right" %>
<% else %>
  <%= link_to "返回花名册", members_path, class: 'btn btn-default pull-right' %>
  <%= link_to "返回班级", classroom_path(@classroom), :class => 'btn btn-default pull-right' %>
