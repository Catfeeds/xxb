<% if current_user.has_role? :admin %>

<%- model_class = Badrecord -%>
<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human.titleize %></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @badrecord.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:troublemaker) %>:</strong></dt>
  <dd><%= @badrecord.troublemaker %></dd>
  <dt><strong><%= model_class.human_attribute_name(:classroom_id) %>:</strong></dt>
  <dd><%= @badrecord.classroom_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:troubletime) %>:</strong></dt>
  <dd><%= @badrecord.troubletime %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subject_id) %>:</strong></dt>
  <dd><%= @badrecord.subject_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @badrecord.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:finish) %>:</strong></dt>
  <dd><%= @badrecord.finish %></dd>
  <dt><strong><%= model_class.human_attribute_name(:finish_man) %>:</strong></dt>
  <dd><%= @badrecord.finish_man %></dd>
  <dt><strong><%= model_class.human_attribute_name(:finish_time) %>:</strong></dt>
  <dd><%= @badrecord.finish_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:deleted_at) %>:</strong></dt>
  <dd><%= @badrecord.deleted_at %></dd>
</dl>

<%= link_to t('.new', :default => [:"helpers.titles.new"], :model => model_class.model_name.human.titleize),
            new_badrecord_path,
            :class => 'btn btn-primary' %>
<%= link_to t('.back', :default => t("helpers.links.back")),
              badrecords_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_badrecord_path(@badrecord), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              badrecord_path(@badrecord),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<% else %>

<%- model_class = Badrecord -%>

<div class="container col-xs-11 col-sm-10 col-md-8 affix">
  <div class="btn-toolbar pull-right" role="toolbar" arial-label="toolbar">
    <!-- 管理功能 -->
    <div class="btn-group" role="group" arial-label="manage">
      <% if current_user.id == @badrecord.user_id  %>
        <%= link_to t('.new', :default => t("helpers.links.new")), new_badrecord_path, :class => 'btn btn-default', tabindex: 51, "data-toggle": "tooltip", "data-placement": "bottom", title: t('.new', :default => [:"helpers.titles.new"], :model => model_class.model_name.human.titleize) %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
          edit_badrecord_path(@badrecord), :class => 'btn btn-default', tabindex: 52, "data-toggle": "tooltip", "data-placement": "bottom", title: t('.edit', :default => [:"helpers.titles.edit"], :model => model_class.model_name.human.titleize) %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
          badrecord_path(@badrecord),
          :method => 'delete',
          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
          :class => 'btn btn-default', tabindex: 53, "data-toggle": "tooltip", "data-placement": "bottom", title: t('.delete', :default => [:"helpers.titles.delete"], :model => model_class.model_name.human.titleize) %>
      <% end %>
      <%= link_to t('.back', :default => t("helpers.links.back")),
        badrecords_path, :class => 'btn btn-default', tabindex: 54, "data-toggle": "tooltip", "data-placement": "bottom", title: t('.back', :default => [:"helpers.titles.back"], :model => model_class.model_name.human.titleize)  %>
    </div>
    <div class="btn-group" role="btn-group" arial-label="navigation">
      <%= link_to t('.retreat', :default => t("helpers.links.retreat")), :back, :class => 'btn btn-default', "data-toggle": "tooltip", "data-placement": "bottom", title: t('.retreat', :default => [:"helpers.titles.retreat"]) %>
    </div>
  </div>
</div>

<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human.titleize %></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @badrecord.user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:troublemaker) %>:</strong></dt>
  <dd><%= User.find(@badrecord.troublemaker).name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:classroom_id) %>:</strong></dt>
  <dd><%= @badrecord.classroom.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:troubletime) %>:</strong></dt>
  <dd><%= @badrecord.troubletime.strftime("%F") %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subject_id) %>:</strong></dt>
  <dd><%= @badrecord.subject.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @badrecord.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:finish) %>:</strong></dt>
  <dd><%= @badrecord.finish %></dd>
  <dt><strong><%= model_class.human_attribute_name(:deleted_at) %>:</strong></dt>
  <dd><%= @badrecord.deleted_at %></dd>
</dl>

<% end %>
