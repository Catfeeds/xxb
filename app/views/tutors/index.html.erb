<%- model_class = Tutor -%>
<div class="page-header">
  <h3>所有辅导</h3>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>编号</th>
      <th>标题</th>
      <th>难度</th>
      <th>创建者</th>
      <% if current_user.has_role? :admin %>
      <th><%= model_class.human_attribute_name(:page) %></th>
      <th><%= model_class.human_attribute_name(:lesson_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <% end %>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tutors.each do |tutor| %>
      <% @tutor_user = User.find_by(tutor.user_id) %>
      <tr>
        <td><%= link_to tutor.id, tutor_path(tutor) %></td>
        <td><%= tutor.title %></td>
        <td><%= tutor.difficulty %></td>
        <td><%= @tutor_user.name %></td>
      <% if current_user.has_role? :admin %>
        <td><%= tutor.page %></td>
        <td><%= tutor.lesson_id %></td>
        <td><%=l tutor.created_at %></td>
      <% end %>
        <td>
          <%= link_to "进入辅导页面", tutor_path(tutor), :class => 'btn btn-xs btn-success' %>
	<% if current_user.id == tutor.user_id %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_tutor_path(tutor), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      tutor_path(tutor),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
		      :class => 'btn btn-xs btn-default' %>
	<% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tutor_path,
            :class => 'btn btn-primary' %>
	  <%= link_to "返回《#{@lesson.name}》原文", lesson_path(@lesson), :class => 'btn btn-default' %>
