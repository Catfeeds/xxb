<%= form_for @tutor, :html => { :class => "form-horizontal tutor" } do |f| %>

    <% if @tutor.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@tutor.errors.count, "error") %> prohibited this tutor from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @tutor.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label "标题", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%= error_span(@tutor[:title]) %>
  </div>
  <div class="control-group">
    <%= f.label "难度", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :difficulty, :class => 'form-control' %>
    </div>
    <%= error_span(@tutor[:difficulty]) %>
  </div>
  <div class="control-group">
    <%= f.label "页面", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :page, :class => 'form-control', rows: "5" %>
    </div>
    <%= error_span(@tutor[:page]) %>
  </div>
  <% if current_user.has_role? :admin %>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%= error_span(@tutor[:user_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :lesson_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :lesson_id, :class => 'form-control' %>
    </div>
    <%= error_span(@tutor[:lesson_id]) %>
  </div>
<% end %>
<hr>
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            tutors_path, :class => 'btn btn-default' %>

<% end %>
