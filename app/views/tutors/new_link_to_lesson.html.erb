<%- model_class = Tutor -%>

<div class="container col-xs-11 col-sm-10 col-md-8 affix">
  <div class="btn-toolbar pull-right" role="toolbar" arial-label="toolbar">
    <div class="btn-group" role="btn-group" arial-label="manage">
      <%= link_to t('.back', :default => t("helpers.links.back")), tutors_path, :class => 'btn btn-default', "data-toggle": "tooltip", "data-placement": "bottom", title: t('.back', :default => [:"helpers.titles.back"], :model => model_class.model_name.human.titleize) %>
    </div>
    <div class="btn-group" role="btn-group" arial-label="navigation">
      <%= link_to t('.retreat', :default => t("helpers.links.retreat")), :back, :class => 'btn btn-default', "data-toggle": "tooltip", "data-placement": "bottom", title: t('.retreat', :default => [:"helpers.titles.retreat"]) %>
    </div>
  </div>
</div>

<div class="page-header">
  <h3>为《<%= @lesson.title %>》添加外链型辅导页面：</h3>
</div>

<%= form_tag :tutor_create_link_to_lesson, class: "form" do %>
  <div class="control-group">
    <%= label_tag "请输入课文标题包含的两个字符，以便找到需要的课程：", nil, class: 'control-label' %>
    <%# label_tag "请选择一篇课文：", nil, class: 'control-label' %>
  <br>
    <div class="controls">
      <%= autocomplete_field_tag :lesson_id, '', autocomplete_lesson_title_tutors_path, 'data-auto-focus': true, class: "form-control", tabindex: 2 %>
      <%# select_tag :lesson_id, options_from_collection_for_select(Lesson.all, "id", 'title'), class: 'form-control' %>
    </div>
  </div>
  <br>
  <%= submit_tag "添加这篇课文", :class => 'btn btn-primary', tabindex: 10 %>
<% end %>
