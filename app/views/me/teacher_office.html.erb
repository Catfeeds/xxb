	  <% unless @my_textbooks.length > 0 %>
	    暂时还没有哦
          <% else %>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>教科书标题</th>
                  <th>修改时间</th>
                </tr>
              </thead>
              <tbody>
                <% @my_textbooks.each do |textbook| %>
                  <tr>
                    <td><%= link_to textbook.title, textbook_path(textbook) %></td>
                    <td><%= textbook.created_at.strftime("%F %T") %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% end %>
        </div>
      </div>
    </div>
