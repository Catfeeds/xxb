<%- model_class = Evaluation -%>
<% if current_user.has_role? :admin %>

<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.new', 'New %{model}'], :model => model_class.model_name.human.titleize %></h1>
</div>

<% else %>

<div class="container col-xs-11 col-sm-10 col-md-8 affix">
  <div class="btn-toolbar pull-right" role="toolbar" arial-label="toolbar">
    <div class="btn-group" role="btn-group" arial-label="navigation">
      <%= link_to t('.retreat', :default => t("helpers.links.retreat")), :back, :class => 'btn btn-default', "data-toggle": "tooltip", "data-placement": "bottom", title: t('.retreat', :default => [:"helpers.titles.retreat"]) %>
    </div>
  </div>
</div>

<div class="page-header">
  <% if session[:lesson_id] && session[:tutor_id] %>
    <% @lesson = Lesson.find(session[:lesson_id]) %>
    <% @tutor = Tutor.find(session[:tutor_id]) %>
    <h3>《<%= @lesson.title %>》 >> “<%= @tutor.title %>” >> 小测验</h3>
  <% else %>
    <h3>小测验</h3>
  <% end %>
</div>

<% end %>

<%= render :partial => 'form' %>

<% unless current_user.has_role? :admin %>
  <% if @tutor %>
    <%= link_to "做不出来？再辅导一次吧", tutor_path(@tutor),  :class => 'btn btn-default pull-right' %>
  <% end %>
<% end %>
