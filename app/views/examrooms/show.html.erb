<div class="page-header">
  <h3><%= @classroom.name %><small> >> </small><%=t '.title', default: model_class.model_name.human.titleize %></h3>
  <h3>考卷名称：<%= @paper.title %> <%= link_to "马上进入测试", paperitems_url, class: 'btn btn-sm btn-default' %></h3>
</div>

<div class="well">
  <div class="row">
  <div class="col-xs-4">
    <p>
      <strong>总分: </strong><%= number_with_precision(@paper.paperitems.collect{|pi|pi.score}.inject(:+), precision: 2) %>
    </p>
  </div>
  <div class="col-xs-4">
    <p>
      <strong>总题量: </strong><%= @paper.paperitems.count %>
    </p>
  </div>
  <div class="col-xs-4">
    <p>
      <strong>测试时间: </strong><%= @paper.duration %>分钟
    </p>
  </div>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>学生序号</th>
      <th>学生姓名</th>
      <th>测试次数</th>
      <th>平均得分</th>
      <th>平均得分率</th>
      <th>可执行操作</th>
    </tr>
  </thead>
  <tbody>
    <% @classroom.members.order(:serial).each do |member| %>
      <tr>
        <td><%= member.serial %></td>
        <td><%= User.find(member.student).name %></td>
        <% papertests = Papertest.where(user_id: member.student, paper_id: @paper.id) %>
        <% if papertests.any? %>
          <% papertests_count = papertests.count%>
          <td><%= papertests_count %></td>
          <% unjustice_count = 0 %>
          <% all_score = 0 %>
          <% papertests.each do |papertest| %>
            <% papertest_score = 0 %>
              <% papertest.evaluations.each do |evaluation| %>
                <% if evaluation.score %>
                  <% papertest_score += evaluation.score %>
                <% else %>
                  <% unjustice_count += 1 %>
                <% end %>
              <% end %>
            <% all_score += papertest_score %>
          <% end %>
          <% average_score = all_score / papertests_count %>
          <% sum_score = @paper.paperitems.collect{|pi|pi.score}.inject(:+) %>
          <td><%= number_with_precision(average_score, precision: 2) %><%= " (有"+ unjustice_count.to_s + "题暂未批改)" if unjustice_count != 0 %></td>
          <td><%= number_to_percentage(average_score*100/sum_score, precision: 2) %></td>
          <td><%= link_to "查看答卷", papertests_url(user_id: member.student), class: 'btn btn-xs btn-default' %></td>
        <% else %>
          <td>还没测试</td>
          <td></td>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

