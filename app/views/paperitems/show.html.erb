<% @practice = @paperitem.practice %>

<div class="page-header">
  <p class="pull-right">分值：<%= number_with_precision(@paperitem.score, precision: 2) %> 分</p>
  <h3><%= @paper.title %> >> <%= @paperitem.serial %>  <%= @practice.title %></h3>
</div>

<div class="well paragraph">
  <% if @practice.material %>
    <span>材料：</span>
    <p class="text-success"><%= sanitize(@practice.material.gsub(/(<(\w|\/)+[^>]*>|\s)/, "")) %></p>
  <% end %>
  <% if  @practice.question %>
    <span>问题：</span>
    <p class="text-success"><%= sanitize(@practice.question.gsub(/(<(\w|\/)+[^>]*>|\s)/, "")) %></p>
  <% end %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>标识号</th>
      <th>答题用户</th>
      <th>答题时间</th>
      <th>得分</th>
      <th>得分率</th>
    </tr>
  </thead>
  <tbody>
    <% @evaluations.each do |evaluation| %>
      <tr>
        <td><%= evaluation.id %></td>
        <td><%= link_to evaluation.user.name, evaluation_path(evaluation) %></td>
        <td><%= evaluation.created_at.strftime("%F %T") %></td>
        <% if evaluation.score %>
          <td><%= number_with_precision(evaluation.score, precision: 2) %></td>
          <td><%= number_to_percentage(evaluation.score*100/evaluation.practice_score, precision: 2) %></td>
        <% elsif evaluation.user_id != current_user.id %>
          <td><%= link_to "我来批改", new_justice_url(evaluation_id: evaluation.id)%></td>
          <td><td>
        <% else %>
          <td>还请等待</td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
