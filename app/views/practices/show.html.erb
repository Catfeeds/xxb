<%- model_class = Practice -%>

<div role="tabpanel">

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#question" aria-controls="question" role="tab" data-toggle="tab">问题</a></li>
    <li role="presentation"><a href="#answer" aria-controls="answer" role="tab" data-toggle="tab">答案</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="question">
<div class="page-header">
  <p><%= @practice.title %></p>
</div>
<div class="paragraph">
  <p><%= sanitize(@practice.question) %></p>
  <% if @practice.picture_q_file_name %>
    <%= image_tag @practice.picture_q.url, class: "img-responsive center-block"  %>
  <% end %>
</div>
    </div>
    <div role="tabpanel" class="tab-pane" id="answer">
      <div class="paragraph">
      <p><%= sanitize(@practice.answer) %></p>
      </div>
      <% if @practice.picture_a_file_name %>
        <%= image_tag @practice.picture_a.url, class: "img-responsive center-block"  %>
      <% end %>
    </div>
  </div>

</div>

<hr>
<% if @previous_practice != nil %>
    <%= link_to "上一个练习", practice_path(@previous_practice), class: 'btn btn-default' %>
<% end %>
<% if @next_practice != nil %>
  <%= link_to "下一个练习", practice_path(@next_practice), class: 'btn btn-default' %>
<% end %>
<%= link_to "查看所有练习", practices_path, :class => 'btn btn-default'  %>
<%= link_to "不能回答？可以返回辅导", tutor_path(@tutor), class: "btn btn-default" %>
<hr>
	    <% if current_user.id == @practice.user_id %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_practice_path,
            :class => 'btn btn-primary' %>
<%= link_to t('.back', :default => t("helpers.links.back")),
              practices_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_practice_path(@practice), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              practice_path(@practice),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
	      :class => 'btn btn-danger' %>
	    <% end %>
<hr>
	      <p>这是《<%= @lesson.title %>》“<%= @tutor.title %>”一节的练习</p>
<% if current_user.has_role? :admin %>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @practice.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tutor_id) %>:</strong></dt>
  <dd><%= @practice.tutor_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lesson_id) %>:</strong></dt>
  <dd><%= @practice.lesson_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:activate) %>:</strong></dt>
  <dd><%= @practice.activate %></dd>
</dl>
<% end %>
