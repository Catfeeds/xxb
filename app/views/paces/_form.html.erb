<% if current_user.has_role? :admin %>

<%= form_for @pace, html: { class: "form-horizontal pace" } do |f| %>

    <% if @pace.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@pace.errors.count, "error") %> 使得这个 pace 无法保存：</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @pace.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :user_id, class: 'form-control' %>
    </div>
    <%= error_span(@pace[:user_id]) %>
  </div>
  <div class="form-group">
    <%= f.label :roadmap_id, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :roadmap_id, class: 'form-control' %>
    </div>
    <%= error_span(@pace[:roadmap_id]) %>
  </div>
  <div class="form-group">
    <%= f.label :lesson_id, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :lesson_id, class: 'form-control' %>
    </div>
    <%= error_span(@pace[:lesson_id]) %>
  </div>
  <div class="form-group">
    <%= f.label :serial, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :serial, class: 'form-control' %>
    </div>
    <%= error_span(@pace[:serial]) %>
  </div>
  <div class="form-group">
    <%= f.label :deleted_at, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :deleted_at, class: 'form-control' %>
    </div>
    <%= error_span(@pace[:deleted_at]) %>
  </div>


  <%= f.submit nil, class: 'btn btn-primary col-sm-offset-2' %>
  <%= link_to t('.cancel', default: t("helpers.links.cancel")),
            paces_path, class: 'btn btn-default' %>

<% end %>

<% else %>

<%= form_for @pace, html: { class: "form-horizontal pace" } do |f| %>

    <% if @pace.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@pace.errors.count, "error") %> 使得这个 pace 无法保存：</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @pace.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :lesson_id, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.autocomplete_field :lesson_id, autocomplete_lesson_title_paces_path, 'data-auto-focus': true, class: "form-control", tabindex: 2 %>
      <%# f.text_field :lesson_id, class: 'form-control' %>
    </div>
    <%= error_span(@pace[:lesson_id]) %>
  </div>
  <div class="form-group">
    <%= f.label :serial, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :serial, class: 'form-control' %>
    </div>
    <%= error_span(@pace[:serial]) %>
  </div>


  <%= f.submit nil, class: 'btn btn-primary col-sm-offset-2' %>
  <%= link_to t('.cancel', default: t("helpers.links.cancel")),
            paces_path, class: 'btn btn-default' %>

<% end %>

<% end %>
