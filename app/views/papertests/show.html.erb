<div class="page-header">
  <h3><%= @paper.id.to_s + "_" + @paper.title %><small> >> </small><%= @papertest.user.name %> >> <%= @papertest.created_at.strftime("%F %T") %>答卷</h3>
</div>

<% @paperitems.each_with_index do |paperitem, i| %>
  <% @practice = paperitem.practice %>
  <h4>第 <%= i+1 %> 题，<%= @practice.title %></h4>
  <div class="well paragraph">
    <% if @practice.material %>
      <p class="text-success">材料：<%= sanitize(@practice.material.gsub(/(<(\w|\/)+[^>]*>|\s)/, "")) %></p>
    <% end %>
    <% if  @practice.question %>
      <p class="text-success">问题：<%= sanitize(@practice.question.gsub(/(<(\w|\/)+[^>]*>|\s)/, "")) %></p>
    <% end %>
    <% e = Evaluation.find_by(practice_id: paperitem.practice_id, papertest_id: @papertest.id, user_id: @papertest.user_id) %>
    <% if e %>
      <p>分值：<%= number_with_precision(e.practice_score, precision: 2) %> 分</p>
      <p class="text-danger">回答：<%= sanitize(e.your_answer.gsub(/(<(\w|\/)+[^>]*>|\s)/, "")) %></p>
  </div>
  <div class="paragraph">
      <% if e.score %>
        <p>得分：<%= number_with_precision(e.score, precision: 2) %> 分
      得分率：<%= number_to_percentage(e.score*100/e.practice_score, precision: 2) %></p>
      <% elsif @papertest.user_id != current_user.id %>
        <%= link_to "我来评卷", new_justice_url(evaluation_id: e.id), class: 'btn btn-primary' %>
      <% else %>
        <p>还未批改，敬请期待</p>
      <% end %>
    <% else %>
      <p class="text-danger">没有回答</p>
      <p>得分：<%= number_with_precision(0, precision: 2) %> 分</p>
    <% end %>
  </div>
  <% if e %>
    <% justices = Justice.where(evaluation_id: e.id) %>
    <% if justices.any? %>
      <div class="well">
        <p>大家的批改:</p>
        <% justices.each_with_index do |justice, index| %>
          <p><strong><%= justice.user.name %></strong>：<%= number_with_precision(justice.score, precision: 2) %>
         <%=  ("，评语：" + justice.remark ) unless justice.remark.blank? %></p>
        <% end %>
      </div>
    <% end %>
  <% end %>
  <hr>
<% end %>

<% end %>
